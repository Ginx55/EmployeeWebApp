@page
@model UpdateEmployeeModel
@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var employeeInfo = Model.employeeInfo;
}

<style>
    .btn-primary {
        margin-left: 5px;
    }
</style>

<h1 class="py-3">Edit Employee</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger py-3" role="alert">
        <p>@errorMessage</p>
    </div>
}

<form method="post">
    <input type="hidden" asp-for="employeeInfo.Id" />

    <div class="row py-2">
        <div class="col">
            <label asp-for="employeeInfo.FirstName">First Name</label>
            <input type="text" class="form-control" placeholder="First name" asp-for="employeeInfo.FirstName" />
            <span asp-validation-for="employeeInfo.FirstName" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="employeeInfo.LastName">Last name</label>
            <input type="text" class="form-control" placeholder="Last name" asp-for="employeeInfo.LastName" />
            <span asp-validation-for="employeeInfo.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row py-2">
        <div class="col">
            <label asp-for="employeeInfo.Email">Email</label>
            <input type="email" class="form-control" placeholder="Email" asp-for="employeeInfo.Email" required />
            <span asp-validation-for="employeeInfo.Email" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="employeeInfo.Birthday">Birthday</label>
            <input type="date" class="form-control" asp-for="employeeInfo.Birthday" />
            <span asp-validation-for="employeeInfo.Birthday" class="text-danger"></span>
        </div>
    </div>
    <div class="row py-2">
        <div class="col">
            <label asp-for="employeeInfo.Phone">Phone</label>
            <input type="tel" class="form-control" placeholder="Phone" asp-for="employeeInfo.Phone" />
            <span asp-validation-for="employeeInfo.Phone" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="employeeInfo.Address">Address</label>
            <input type="text" class="form-control" placeholder="Address" asp-for="employeeInfo.Address" />
            <span asp-validation-for="employeeInfo.Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row py-2">
        <div class="col">
            <label asp-for="employeeInfo.Position">Position</label>
            <input type="text" class="form-control" placeholder="Position" asp-for="employeeInfo.Position" />
            <span asp-validation-for="employeeInfo.Position" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="employeeInfo.Department">Department</label>
            <input type="text" class="form-control" placeholder="Department" asp-for="employeeInfo.Department" />
            <span asp-validation-for="employeeInfo.Department" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex flex-row-reverse">
        <button type="submit" class="btn btn-primary">Edit</button>
        <button type="button" class="btn btn-danger" onclick="window.location.href='/'">Cancel</button>
    </div>
</form>