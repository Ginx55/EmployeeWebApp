@page
@model AddEmployeeModel
@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var Info = Model.Info;
}

<style>
    .btn-primary {
        margin-left: 5px;
    }
</style>

<h1 class="py-3">
    Add Employee
</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger py-3" role="alert">
        <p>@errorMessage</p>
    </div>
}

<form method="post">
    <div class="row py-2">
        <div class="col">
            <label asp-for="Info.FirstName">First Name</label>
            <input type="text" class="form-control" placeholder="First name" asp-for="Info.FirstName">
            <span asp-validation-for="Info.FirstName" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Info.LastName">Last Name</label>
            <input type="text" class="form-control" placeholder="Last name" asp-for="Info.LastName">
            <span asp-validation-for="Info.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row py-2">
        <div class="col">
            <label asp-for="Info.Email">Email</label>
            <input type="email" class="form-control" placeholder="Email" asp-for="Info.Email">
            <span asp-validation-for="Info.Email" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Info.Birthday">Birthday</label>
            <input type="date" class="form-control" asp-for="Info.Birthday">
            <span asp-validation-for="Info.Birthday" class="text-danger"></span>
        </div>
    </div>
    <div class="row py-2">
        <div class="col">
            <label asp-for="Info.Phone">Phone</label>
            <input type="tel" class="form-control" placeholder="Phone" asp-for="Info.Phone">
            <span asp-validation-for="Info.Phone" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Info.Address">Address</label>
            <input type="text" class="form-control" placeholder="Address" asp-for="Info.Address">
            <span asp-validation-for="Info.Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row py-2">
        <div class="col">
            <label asp-for="Info.Position">Position</label>
            <input type="text" class="form-control" placeholder="Position" asp-for="Info.Position">
            <span asp-validation-for="Info.Position" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Info.Department">Department</label>
            <input type="text" class="form-control" placeholder="Department" asp-for="Info.Department">
            <span asp-validation-for="Info.Department" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex flex-row-reverse">
        <button type="submit" class="btn btn-primary">Add</button>
        <button type="button" class="btn btn-danger" onclick="window.location.href='/'">Cancel</button>
    </div>
</form>