@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var successMessage = TempData["SuccessMessage"] as string;
}

<div>
    <h1 class="py-3">Employee List</h1>
    <div class="d-flex flex-row-reverse">
        <a href="/Actions/AddEmployee" class="btn btn-success">Add Employee</a>
    </div>
    
    <table class="table table-dark text-center my-2">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Position</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.EmployeeList)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Position</td>
                    <td>@employee.Department</td>
                    <td>
                        <a href="/Actions/ViewEmployee?id=@employee.Id" style="color: #03C988">
                            <span class="material-symbols-outlined">
                                visibility
                            </span>
                        </a>
                        <a href="/Actions/UpdateEmployee?id=@employee.Id">
                            <span class="material-symbols-outlined" style="color: #C69749">
                                edit
                            </span>
                        </a>
                        <a href="/Actions/DeleteEmployee?id=@employee.Id">
                            <span class="material-symbols-outlined text-danger">
                                delete
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success py-3" role="alert">
            <p>@successMessage</p>
        </div>
    }

</div>
